package main;

public class SplayTree implements BST{

		Node root, current, parent;
		int size = 0;

		public SplayTree(){
			root = null;
		}

		@Override
		public void insert(String s) {
			if (root == null){
				root = new Node(s);
				size++;
			}
			else{
				insertR(s, root);
			}
		}

		public void insertR(String s, Node r){
			Node current = r;
			if(s.compareToIgnoreCase(current.val) > 0)
			{
				parent = current;
				current = current.right;
				if(current == null)
				{
					parent.right = new Node(s, parent);
					size++;
				}
				else{
					insertR(s, current);
				}
			}
			else if(s.compareToIgnoreCase(current.val) < 0){
				parent = current;
				current = current.left;
				if(current == null)
				{
					parent.left = new Node(s, parent);
					size++;
				}
				else{
					insertR(s, current);
				}
			}

		}
		

		@Override
		public void remove(String s) {
			if(contains(s)){
				removeR(get(s));
				size--;
			}
		}


		public void removeR(Node e){
			Node tempParent = e.parent;
			if(tempParent == null){
				String temp = findMin(e.right);
				removeR(get(findMin(e.right)));
				e.val = temp;
				
			}
			else if(e.left == null && e.right == null){
				if(tempParent.left == e){
					tempParent.left = null;
				}
				else
					tempParent.right = null;
			}
			else if(e.left != null && e.right != null){
				e.val = findMin(e.right);
				removeR(e.right);
			}
			else if(e.left!= null){
				if (tempParent.left == e){
					tempParent.left = e.left;
				}
				else{
					tempParent.right = e.left;
				}
			}
			else{
				if(tempParent.left == e){
					tempParent.left = e.right;
				}
				else{
					tempParent.right = e.right;
				}
			}
		}

		@Override
		public String findMax() {
			current = root;
			while(current.right != null)
			{
				current = current.right;
			}
			return current.val;
		}

		@Override
		public String findMin() {
			current = root;
			while(current.left != null)
			{
				current = current.left;
			}
			
			return current.val;
		}

		public String findMin(Node n){
			current = n;
			while(current.left != null)
			{
				current = current.left;
			}
			return current.val;
		}

		@Override
		public boolean contains(String s) {
			if(get(s) == null)
			{
				return false;
			}
			else{
				splay(get(s));
			}
			return true;
		}

		@Override
		public Node get(String s) {
			current = root;

			while(current != null){
				if(s.compareToIgnoreCase(current.val) < 0){
					current = current.left;
				}
				else if(s.compareToIgnoreCase(current.val) > 0){
					current = current.right;
				}
				else if(s.compareToIgnoreCase(current.val) == 0)
				{
					break;
				}
				else
					current = null;
			}

			return current;

		}

		@Override
		public String val() {
			return root.val;
		}

		@Override
		public boolean empty() {
			if(root==null){
				return true;
			}
			return false;
		}

		@Override
		public int size() {
			return size;
		}

		public int height(){
			current = root;
			return heightR(current);
		}

		@Override
		public int heightR(Node n) {
			if(n == null){
				return 0;
			}
			return 1 + Math.max(heightR(n.right), heightR(n.left));
		}

		public void print(){
			if(root != null){
				String spaces = "";
				printR(root, spaces);
			}
		}

		public void printR(Node r, String s){
			if(r != null){
				System.out.println(s + r.val);
				s += "    ";
				printR(r.left, s);
				printR(r.right, s);
			}	
		}
		
		public void splay(Node n){
			Node b, c, grandparent, ggparent;
			Node parental = n.parent;
			if(parental == null){
				root = n;
			}
			else if(parental != null){
				grandparent = parental.parent;
			}
			else{
				grandparent = parental.parent;
			}
			if(grandparent == null){
				ggparent = null;
			}
			else{
				ggparent = grandparent.parent;
			}
		
			else if(grandparent == null){
				if(parent.left == n ){
					b = n.right;
					n.right = parent;
					parent.parent = n;
					parent.left = b;
					if(b != null){
						b.parent = parent;
					}
					n.parent = null;
				}
				else {
					b = n.left;
					n.left = parent;
					parent.parent = n;
					parent.right = b;
					if(b != null){
						b.parent = parent;
						n.parent = null;
					}
				}
				root = n;
			}
			
			else if(n == parent.right && parent == grandparent.right){
				c = parent.left;
				b = n.left;
				n.parent = ggparent;
				if(ggparent != null){
					if(ggparent.left == grandparent){
						ggparent.left = n;
					}
					else{
						ggparent.right = n;
					}
				}
				parent.parent = n;
				n.left = parent;
				grandparent.parent = parent;
				parent.left = grandparent;
				parent.right = b;
				if(b != null){
					b.parent = parent;
				}
				grandparent.right = c;
				if(c != null){
					c.parent = grandparent;
				}
			}
			else if(n == parent.left && parent == grandparent.left){
				b = n.right;
				c = parent.right;
				n.parent = ggparent;
				if(ggparent != null){
					if(ggparent.left == grandparent){
						ggparent.left = n;
					}
					else{
						ggparent.right = n;
					}
				}
				n.right = parent;
				parent.parent = n;
				parent.right = grandparent;
				grandparent.parent = parent;
				grandparent.left = c;
				if(c != null){
					c.parent = grandparent;
				}
				parent.left = b;
				if(b != null){
					b.parent = parent;
				}
			}
			else if(n == parent.right && parent == grandparent.left){ //zig-zag-R
				b = n.left;
				c = n.right;
				n.parent = ggparent;
				if(ggparent != null){
					if(ggparent.left == grandparent){
						ggparent.left = n;
					}
					else{
						ggparent.right = n;
					}
				}
				n.left = grandparent;
				grandparent.parent = n;
				n.right = parent;
				parent.parent = n;
				grandparent.right = b;
				if(b != null){
					b.parent = grandparent;
				}
				parent.left = c;
				if(c != null){
					c.parent = parent;
				}
			}
			else{
				if(n.parent == null){
					this.root = parent;
				}
				else
				splay(n);
			}
			
			
			}
			
		}



